%body

  %header.header
    = render "share/user-field"
  .contents
    .group-list
      - current_user.groups.each do |group|
        .group-list__group
          = link_to group_messages_path(group) do
            %p.group-list__group__name 
              = group.name
            %p.group-list__group__message
              = group.show_last_message
    = render "share/group-list"
